@using Microsoft.IdentityModel.Tokens;
@model Assessment.DATA.Models.Pais

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PaisName" class="control-label"></label>
                <input asp-for="PaisName" class="form-control" />
                <span asp-validation-for="PaisName" class="text-danger"></span>
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="PaisFlag" class="control-label"></label>
                    <input type="file" asp-for="PaisFlag" class="form-control-file" />
                    <span asp-validation-for="PaisFlag" class="text-danger"></span>
                </div>

                <button type="submit">Enviar arquivo</button>
            </form>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
